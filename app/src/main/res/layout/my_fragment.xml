<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffffff"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_width="match_parent"
                android:layout_height="300px"
                android:background="@mipmap/wode_beijing" />

            <TextView
                android:id="@+id/me_massage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20px"
                android:layout_marginTop="20px"
                android:drawableTop="@mipmap/message_hei_xiao"
                android:padding="30px"
                android:text="消息"
                android:textColor="#000000" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="50dp"
            android:gravity="center">

            <com.freak.shopping.custom.CircleImageView
                android:id="@+id/me_imageView"
                android:layout_width="250px"
                android:layout_height="250px"
                android:layout_centerHorizontal="true"
                android:src="@drawable/tx1"
                app:civ_border_width="2dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/me_imageView"
                android:background="#ffffffff"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100px"
                    android:layout_marginTop="10px"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/me_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="恋恋baby"
                        android:textColor="#333333"
                        android:textSize="50px" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="40px"
        android:background="#f5f5f5" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20px"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="30px">

                    <ImageView
                        android:id="@+id/me_account"
                        android:layout_width="100px"
                        android:layout_height="100px"
                        android:layout_gravity="center"
                        android:background="@mipmap/wodezhanghu" />

                    <TextView
                        android:id="@+id/textView30"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30px"
                        android:gravity="center"
                        android:text="我的账户"
                        android:textColor="#999999"
                        android:textSize="40px" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="30px">

                    <ImageView
                        android:id="@+id/me_photo"
                        android:layout_width="100px"
                        android:layout_height="100px"
                        android:layout_gravity="center"
                        android:background="@mipmap/wodexiangce" />

                    <TextView
                        android:id="@+id/textView32"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30px"
                        android:gravity="center"
                        android:text="我的相册"
                        android:textColor="#999999"
                        android:textSize="40px" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="30px">

                    <ImageView
                        android:id="@+id/me_collect"
                        android:layout_width="100px"
                        android:layout_height="100px"
                        android:layout_gravity="center"
                        android:background="@mipmap/wodeshoucang" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30px"
                        android:gravity="center"
                        android:text="我的收藏"
                        android:textColor="#999999"
                        android:textSize="40px" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20px"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="30px">

                    <ImageView
                        android:id="@+id/me_homepage"
                        android:layout_width="100px"
                        android:layout_height="100px"
                        android:layout_gravity="center"
                        android:background="@mipmap/gerenzhuye" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30px"
                        android:gravity="center"
                        android:text="个人主页"
                        android:textColor="#999999"
                        android:textSize="40px" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="40px"
                android:background="#f5f5f5" />


            <LinearLayout
                android:id="@+id/my_cqc"
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:orientation="horizontal">

                <View
                    android:layout_width="80px"
                    android:layout_height="80px"
                    android:layout_gravity="center"
                    android:layout_marginLeft="40px"
                    android:background="@mipmap/gerenrenzheng_kui" />

                <TextView
                    android:id="@+id/me_authentication"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="40px"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="个人认证"
                    android:textColor="#333333"
                    android:textSize="40px" />

                <View
                    android:layout_width="20px"
                    android:layout_height="40px"
                    android:layout_gravity="center"
                    android:layout_marginRight="40px"
                    android:background="@mipmap/more_xiao" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10px"
                android:background="#f5f5f5" />


            <LinearLayout
                android:id="@+id/my_skill"
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:orientation="horizontal">

                <View
                    android:layout_width="80px"
                    android:layout_height="80px"
                    android:layout_gravity="center"
                    android:layout_marginLeft="40px"
                    android:background="@mipmap/wodejienneg_kui" />

                <TextView
                    android:id="@+id/me_skill"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="40px"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="我的技能"
                    android:textColor="#333333"
                    android:textSize="40px" />

                <View
                    android:layout_width="20px"
                    android:layout_height="40px"
                    android:layout_gravity="center"
                    android:layout_marginRight="40px"
                    android:background="@mipmap/more_xiao" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10px"
                android:background="#f5f5f5" />

            <LinearLayout
                android:id="@+id/my_order"
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:orientation="horizontal">

                <View
                    android:layout_width="80px"
                    android:layout_height="80px"
                    android:layout_gravity="center"
                    android:layout_marginLeft="40px"
                    android:background="@mipmap/document_fill" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="40px"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="我的订单"
                    android:textColor="#333333"
                    android:textSize="40px" />

                <View
                    android:layout_width="20px"
                    android:layout_height="40px"
                    android:layout_gravity="center"
                    android:layout_marginRight="40px"
                    android:background="@mipmap/more_xiao" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10px"
                android:background="#f5f5f5" />
            <LinearLayout
                android:id="@+id/my_alter_information"
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:orientation="horizontal">

                <View
                    android:layout_width="80px"
                    android:layout_height="80px"
                    android:layout_gravity="center"
                    android:layout_marginLeft="40px"
                    android:background="@mipmap/gerenziliao_kui" />

                <TextView
                    android:id="@+id/me_alter_information"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="40px"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="修改个人资料"
                    android:textColor="#333333"
                    android:textSize="40px" />

                <View
                    android:layout_width="20px"
                    android:layout_height="40px"
                    android:layout_gravity="center"
                    android:layout_marginRight="40px"
                    android:background="@mipmap/more_xiao" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10px"
                android:background="#f5f5f5" />

            <LinearLayout
                android:id="@+id/my_share"
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:orientation="horizontal">

                <View
                    android:layout_width="80px"
                    android:layout_height="80px"
                    android:layout_gravity="center"
                    android:layout_marginLeft="40px"
                    android:background="@mipmap/fenxiang_kui" />

                <TextView
                    android:id="@+id/me_share"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="40px"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="分享"
                    android:textColor="#333333"
                    android:textSize="40px" />

                <View
                    android:layout_width="20px"
                    android:layout_height="40px"
                    android:layout_gravity="center"
                    android:layout_marginRight="40px"
                    android:background="@mipmap/more_xiao" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10px"
                android:background="#f5f5f5" />

            <LinearLayout
                android:id="@+id/my_notebook"
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:orientation="horizontal">

                <View
                    android:layout_width="80px"
                    android:layout_height="80px"
                    android:layout_gravity="center"
                    android:layout_marginLeft="40px"
                    android:background="@mipmap/shouyongshouce_kui" />

                <TextView
                    android:id="@+id/me_notebook"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="40px"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="使用手册"
                    android:textColor="#333333"
                    android:textSize="40px" />

                <View
                    android:layout_width="20px"
                    android:layout_height="40px"
                    android:layout_gravity="center"
                    android:layout_marginRight="40px"
                    android:background="@mipmap/more_xiao" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10px"
                android:background="#f5f5f5" />

            <LinearLayout
                android:id="@+id/my_setting"
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:orientation="horizontal">

                <View
                    android:layout_width="80px"
                    android:layout_height="80px"
                    android:layout_gravity="center"
                    android:layout_marginLeft="40px"
                    android:background="@mipmap/shezhi_kui" />

                <TextView
                    android:id="@+id/me_setting"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="40px"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="设置"
                    android:textColor="#333333"
                    android:textSize="40px" />

                <View
                    android:layout_width="20px"
                    android:layout_height="40px"
                    android:layout_gravity="center"
                    android:layout_marginRight="40px"
                    android:background="@mipmap/more_xiao" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>