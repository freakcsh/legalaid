<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <include
        layout="@layout/title"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350px"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150px"
            android:paddingLeft="40px"
            android:paddingRight="40px">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="充值金额"
                android:textColor="#666666"
                android:textSize="40px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="20px">

                <RadioButton
                    android:layout_width="230px"
                    android:layout_height="120px"
                    android:layout_marginRight="20px"
                    android:background="@drawable/radio_button_custom"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:text="5元"
                    android:textColor="#333333"
                    android:textSize="40px" />

                <RadioButton
                    android:layout_width="230px"
                    android:layout_height="120px"
                    android:layout_marginRight="20px"
                    android:background="@drawable/radio_button_custom"
                    android:button="@null"
                    android:gravity="center"
                    android:text="10元"
                    android:textColor="#333333"
                    android:textSize="40px" />

                <RadioButton
                    android:layout_width="230px"
                    android:layout_height="120px"
                    android:layout_marginRight="20px"
                    android:background="@drawable/radio_button_custom"
                    android:button="@null"
                    android:gravity="center"
                    android:text="50元"
                    android:textColor="#333333"
                    android:textSize="40px" />

                <RadioButton
                    android:layout_width="230px"
                    android:layout_height="120px"
                    android:layout_marginRight="20px"
                    android:background="@drawable/radio_button_custom"
                    android:button="@null"
                    android:gravity="center"
                    android:text="其他金额"
                    android:textColor="#333333"
                    android:textSize="40px" />


            </RadioGroup>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="20px"
        android:background="#b5b5b5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150px"
            android:paddingLeft="40px">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="充值方式"
                android:textColor="#666666"
                android:textSize="40px" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="40px">

            <ImageView
                android:id="@+id/cz_zfb"
                android:layout_width="150px"
                android:layout_height="150px"
                android:layout_marginLeft="20px"
                android:background="@mipmap/zhifubao" />

            <TextView
                android:id="@+id/cz_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cz_tv"
                android:layout_marginLeft="50px"
                android:layout_toEndOf="@id/cz_zfb"
                android:layout_toRightOf="@id/cz_zfb"
                android:text="支付宝"
                android:textColor="#333333"
                android:textSize="50px" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/cz_zfb"
                android:layout_alignLeft="@+id/cz_tv"
                android:layout_alignStart="@+id/cz_tv"
                android:layout_marginBottom="20px"
                android:text="大额支付、支持银行卡、信用卡"
                android:textColor="#999999"
                android:textSize="40px" />

            <CheckBox
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/cart_selector"
                android:button="@null" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="40px">

            <ImageView
                android:id="@+id/cz_wx"
                android:layout_width="150px"
                android:layout_height="150px"
                android:layout_marginLeft="20px"
                android:background="@mipmap/weixinzhifu" />

            <TextView
                android:id="@+id/cz_wx_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cz_wx_tv"
                android:layout_marginLeft="50px"
                android:layout_toEndOf="@id/cz_wx"
                android:layout_toRightOf="@id/cz_wx"
                android:text="微信支付"
                android:textColor="#333333"
                android:textSize="50px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/cz_wx"
                android:layout_alignLeft="@+id/cz_wx_tv"
                android:layout_alignStart="@+id/cz_wx_tv"
                android:layout_marginBottom="20px"
                android:text="支付安全、支持银行卡、信用卡"
                android:textColor="#999999"
                android:textSize="40px" />

            <CheckBox
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/cart_selector"
                android:button="@null"
                android:checked="true" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <TextView
            android:layout_width="950px"
            android:layout_height="120px"
            android:background="@drawable/text_view_huang"
            android:gravity="center"
            android:text="确认充值"
            android:textColor="#333333"
            android:textSize="50px" />
    </LinearLayout>

</LinearLayout>