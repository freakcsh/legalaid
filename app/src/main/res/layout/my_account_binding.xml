<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <include
        android:id="@+id/bind_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        layout="@layout/title"
        />
    <RelativeLayout
        android:id="@+id/bill_zhi_fu_bao"
        android:layout_width="match_parent"
        android:layout_height="250px"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/cz_zfb"
            android:layout_width="150px"
            android:layout_height="150px"
            android:background="@mipmap/zhifubao"
            android:layout_marginLeft="20px"/>
        <TextView
            android:id="@+id/cz_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付宝"
            android:textSize="45px"
            android:textColor="#333333"
            android:layout_toRightOf="@id/cz_zfb"
            android:layout_toEndOf="@id/cz_zfb"
            android:layout_below="@id/cz_tv"
            android:layout_marginLeft="50px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="大额支付、支持银行卡、信用卡"
            android:textSize="40px"
            android:textColor="#999999"
            android:layout_alignBottom="@+id/cz_zfb"
            android:layout_alignLeft="@+id/cz_tv"
            android:layout_alignStart="@+id/cz_tv"
            android:layout_marginBottom="20px"
            android:id="@+id/textView12" />
        <ImageView
            android:layout_width="30px"
            android:layout_height="60px"
            android:background="@mipmap/more_xiao"
            android:layout_marginRight="12dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

<View
    android:layout_width="match_parent"
    android:layout_height="8px"
    android:background="#f5f5f5"/>
    <RelativeLayout
        android:id="@+id/bill_we_chat"
        android:layout_width="match_parent"
        android:layout_height="250px"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/cz_wx"
            android:layout_width="150px"
            android:layout_height="150px"
            android:layout_marginLeft="20px"
            android:background="@mipmap/weixinzhifu" />

        <TextView
            android:id="@+id/cz_wx_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cz_wx_tv"
            android:layout_marginLeft="40px"
            android:layout_toEndOf="@id/cz_wx"
            android:layout_toRightOf="@id/cz_wx"
            android:text="微信支付"
            android:textColor="#333333"
            android:textSize="45px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付安全、支持银行卡、信用卡"
            android:textColor="#999999"
            android:textSize="40px"
            android:layout_alignTop="@+id/imageView8"
            android:layout_alignLeft="@+id/cz_wx_tv"
            android:layout_alignStart="@+id/cz_wx_tv" />

        <ImageView
            android:layout_width="30px"
            android:layout_height="60px"
            android:background="@mipmap/more_xiao"
            android:layout_marginRight="12dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/imageView8" />
    </RelativeLayout>
</LinearLayout>