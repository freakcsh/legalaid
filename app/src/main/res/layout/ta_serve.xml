<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <GridView
                android:layout_width="match_parent"
                android:layout_height="300px">

            </GridView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:gravity="center"
                android:paddingLeft="40px"
                android:paddingRight="40px">

                <View
                    android:layout_width="80px"
                    android:layout_height="80px"
                    android:background="@mipmap/integral_xiao" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="40px"
                    android:gravity="center"
                    android:text="技能等级"
                    android:textColor="#333333"
                    android:textSize="40px" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|right"
                    android:text="初级1"
                    android:textColor="#333333"
                    android:textSize="40px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:gravity="center"
                android:paddingLeft="40px"
                android:paddingRight="40px">

                <View
                    android:layout_width="80px"
                    android:layout_height="80px"
                    android:background="@mipmap/qian_xiao" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="40px"
                    android:gravity="center"
                    android:text="线下服务"
                    android:textColor="#333333"
                    android:textSize="40px" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|right"
                    android:text="300"
                    android:textColor="#333333"
                    android:textSize="40px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|right"
                    android:text="元/小时"
                    android:textColor="#333333"
                    android:textSize="40px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:gravity="center"
                android:paddingLeft="40px"
                android:paddingRight="40px">

                <View
                    android:layout_width="80px"
                    android:layout_height="80px"
                    android:background="@mipmap/time_xiao" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="40px"
                    android:gravity="center"
                    android:text="服务时间"
                    android:textColor="#333333"
                    android:textSize="40px" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|right"
                    android:text="周六 周日"
                    android:textColor="#333333"
                    android:textSize="40px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:gravity="center"
                android:paddingLeft="40px"
                android:paddingRight="40px">

                <View
                    android:layout_width="80px"
                    android:layout_height="80px"
                    android:background="@mipmap/label_xiao" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="40px"
                    android:gravity="center"
                    android:text="专业擅长"
                    android:textColor="#333333"
                    android:textSize="40px" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|right"
                    android:text="客户到男士SPA技师那里"
                    android:textColor="#333333"
                    android:textSize="40px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:gravity="center"
                android:paddingLeft="40px"
                android:paddingRight="40px">

                <View
                    android:layout_width="80px"
                    android:layout_height="80px"
                    android:background="@mipmap/order_xiao" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="40px"
                    android:gravity="center"
                    android:text="服务介绍"
                    android:textColor="#333333"
                    android:textSize="40px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:layout_marginLeft="80px"
                    android:text="提高呼吸系统和心血管系统技能较长时间有节奏的深长呼吸"
                    android:textColor="#333333"
                    android:textSize="40px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:gravity="center"
                android:paddingLeft="40px"
                android:paddingRight="40px">

                <View
                    android:layout_width="80px"
                    android:layout_height="80px"
                    android:background="@mipmap/remind_xiao" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="40px"
                    android:gravity="center"
                    android:text="我的优势"
                    android:textColor="#333333"
                    android:textSize="40px" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|right"
                    android:text="让人回复精神"
                    android:textColor="#333333"
                    android:textSize="40px" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>