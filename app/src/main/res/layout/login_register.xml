<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <include
        layout="@layout/title"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/login_background"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cb_register_lawyer"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:button="@null"
            android:background="@drawable/cart_selector"
            android:layout_marginRight="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="律师用户"
            android:textSize="18sp"
            android:layout_marginRight="40dp"/>
        <CheckBox
            android:id="@+id/cb_register_common"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/cart_selector"
            android:button="@null"
            android:checked="true"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="40dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="普通用户"
            android:textSize="18sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:layout_marginTop="5dp"
        android:background="@drawable/login_background"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:id="@+id/textView38"
            android:layout_width="250px"
            android:layout_height="match_parent"
            android:layout_marginLeft="30px"
            android:gravity="center_vertical"
            android:text="手机号码："
            android:textColor="#333333"
            android:textSize="40px" />

        <EditText
            android:id="@+id/register_phone"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:hint="请输入绑定手机号"
            android:inputType="phone"
            android:textColor="#999999"
            android:textColorHint="#999999"
            android:textSize="40px" />

        <TextView
            android:id="@+id/send_register_code"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/text_view_huang"
            android:gravity="center"
            android:text="发送验证码"
            android:textColor="@color/white"
            android:textSize="40px"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="250px"
            android:layout_height="match_parent"
            android:layout_marginLeft="30px"
            android:gravity="center_vertical"
            android:text="验证码"
            android:textColor="#333333"
            android:textSize="40px" />

        <EditText
            android:id="@+id/register_verification_code"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:hint="请输入验证码"
            android:inputType="number"
            android:textColor="#999999"
            android:textColorHint="#999999"
            android:textSize="40px" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/login_background"
        android:orientation="horizontal">

        <TextView
            android:layout_width="250px"
            android:layout_height="match_parent"
            android:layout_marginLeft="30px"
            android:gravity="center_vertical"
            android:text="密         码："
            android:textColor="#333333"
            android:textSize="40px" />

        <EditText
            android:id="@+id/register_password"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:hint="请确认密码"
            android:inputType="textPassword"
            android:textColor="#999999"
            android:textColorHint="#999999"
            android:textSize="40px" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/login_background"
        android:orientation="horizontal">

        <TextView
            android:layout_width="250px"
            android:layout_height="match_parent"
            android:layout_marginLeft="30px"
            android:gravity="center_vertical"
            android:text="确认密码："
            android:textColor="#333333"
            android:textSize="40px" />

        <EditText
            android:id="@+id/edt_re_register_password"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:textColor="#999999"
            android:textColorHint="#999999"
            android:textSize="40px" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:gravity="center|bottom">

        <TextView
            android:id="@+id/register_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/text_view_huang"
            android:gravity="center"
            android:text="注册"
            android:textColor="@color/white"
            android:textSize="64px" />
    </LinearLayout>
</LinearLayout>