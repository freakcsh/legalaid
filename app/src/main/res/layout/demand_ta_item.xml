<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="450px"
        android:layout_marginLeft="25px"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/demand_ta_img"
            android:layout_width="300px"
            android:layout_height="300px"
            />

        <TextView
            android:id="@+id/demand_ta_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/demand_ta_img"
            android:layout_marginLeft="20px"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/demand_ta_img"
            android:layout_toRightOf="@+id/demand_ta_img"
            android:text="乖蜀黍"
            android:textColor="#333333"
            android:textSize="40px" />

        <TextView
            android:id="@+id/demand_ta_server"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/demand_ta_sj"
            android:layout_marginLeft="20px"
            android:layout_toEndOf="@+id/demand_ta_img"
            android:layout_toRightOf="@+id/demand_ta_img"
            android:text="服务：逛商场"
            android:textColor="#333333"
            android:textSize="40px" />

        <TextView
            android:id="@+id/textView27"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/demand_ta_img"
            android:layout_alignLeft="@+id/demand_ta_server"
            android:layout_alignStart="@+id/demand_ta_server"
            android:text="认证："
            android:textColor="#333333"
            android:textSize="40px"
            />

        <ImageView
            android:id="@+id/demand_ta_sj"
            android:layout_width="80px"
            android:layout_height="60px"
            android:layout_marginTop="50px"
            android:layout_alignBottom="@+id/textView27"
            android:layout_toRightOf="@+id/textView27"
             />

        <ImageView
            android:id="@+id/demand_ta_cqc"
            android:layout_width="80px"
            android:layout_height="60px"
            android:layout_alignTop="@+id/demand_ta_sj"
            android:layout_toEndOf="@+id/demand_ta_sj"
            android:layout_toRightOf="@+id/demand_ta_sj"
            />

        <ImageView
            android:id="@+id/demand_ta_wx"
            android:layout_width="80px"
            android:layout_height="60px"
            android:layout_alignTop="@+id/demand_ta_cqc"
            android:layout_toEndOf="@+id/demand_ta_cqc"
            android:layout_toRightOf="@+id/demand_ta_cqc"
           />

        <TextView
            android:id="@+id/demand_ta_age_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/demand_text_view"
            android:gravity="center"
            android:paddingLeft="30px"
            android:text="23"
            android:textColor="#ffffff"
            android:textSize="40px"
            android:layout_marginRight="13dp"
            android:layout_marginEnd="13dp"
            android:layout_alignBottom="@+id/demand_ta_name"
            android:layout_alignRight="@+id/demand_ta_wx"
            android:layout_alignEnd="@+id/demand_ta_wx" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="40px"
            android:layout_height="50px"
            android:layout_alignTop="@+id/demand_ta_age_sex"
            android:layout_toLeftOf="@+id/demand_ta_distance"
            android:layout_toStartOf="@+id/demand_ta_distance"
            android:layout_marginRight="9dp"
            android:layout_marginEnd="9dp" />

        <TextView
            android:id="@+id/demand_ta_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView11"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="80px"
            android:text="1.5km"
            android:textColor="#666666"
            android:textSize="40px" />

        <TextView
            android:id="@+id/demand_ta_yy"
            android:layout_width="250px"
            android:layout_height="wrap_content"
            android:background="@drawable/text_view_huang"
            android:gravity="center"
            android:text="应邀赚钱"
            android:textColor="#333333"
            android:textSize="40px"
            android:layout_alignBottom="@+id/demand_ta_wx"
            android:layout_toRightOf="@+id/demand_ta_wx"
            android:layout_toEndOf="@+id/demand_ta_wx"
            android:layout_marginLeft="7dp"
            android:layout_marginStart="7dp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:background="#f5f5f5"/>
</LinearLayout>