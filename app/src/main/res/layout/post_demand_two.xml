<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

 <include
     layout="@layout/title"
     android:layout_width="match_parent"
     android:layout_height="50dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="20px"
                android:paddingLeft="40px"
                android:paddingRight="40px"
                android:paddingTop="20px">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <com.freak.shopping.custom.CircleImageView
                        android:layout_width="150px"
                        android:layout_height="150px"
                        android:background="@drawable/tx1" />
                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/post_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40px"
                        android:text="恋恋baby"
                        android:textColor="#666666"
                        android:textSize="50px" />

                    <ImageView

                        android:id="@+id/dt"
                        android:layout_width="30px"
                        android:layout_height="50px"
                        android:layout_below="@+id/post_name"
                        android:layout_marginLeft="40px"
                        android:layout_marginTop="30px"
                        android:background="@mipmap/coordinates_fill_kui" />

                    <TextView
                        android:id="@+id/post_jl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/post_name"
                        android:layout_marginLeft="20px"
                        android:layout_marginTop="20px"
                        android:layout_toRightOf="@id/dt"
                        android:text="1.5km"
                        android:textColor="#666666"
                        android:textSize="40px" />

                    <TextView
                        android:layout_width="150px"
                        android:layout_height="60px"
                        android:layout_marginLeft="40px"
                        android:layout_toRightOf="@+id/post_name"
                        android:background="@drawable/text_view_custom"
                        android:drawableLeft="@mipmap/nv_bai"
                        android:gravity="center"
                        android:paddingLeft="30px"
                        android:text="23"
                        android:textSize="40px" />
                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="20px"
                android:background="#b5b5b5" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150px">

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="220px"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20px"
                    android:gravity="center_vertical"
                    android:text="需求品类"
                    android:textColor="#666666"
                    android:textSize="40px" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="740px"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="80px"
                    android:gravity="center_vertical|end"
                    android:text="男士SAP"
                    android:textColor="#666666"
                    android:textSize="40px" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#b5b5b5" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150px">

                <TextView
                    android:layout_width="220px"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20px"
                    android:gravity="center_vertical"
                    android:text="预约时间"
                    android:textColor="#666666"
                    android:textSize="40px" />

                <TextView
                    android:layout_width="740px"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="80px"
                    android:gravity="center_vertical|end"
                    android:text="2017.7.19 19:00"
                    android:textColor="#666666"
                    android:textSize="40px" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#b5b5b5" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150px">

                <TextView
                    android:layout_width="220px"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20px"
                    android:gravity="center_vertical"
                    android:text="有效期"
                    android:textColor="#666666"
                    android:textSize="40px" />

                <TextView
                    android:layout_width="740px"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="80px"
                    android:gravity="center_vertical|end"
                    android:text="30天"
                    android:textColor="#666666"
                    android:textSize="40px" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#b5b5b5" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150px">

                <TextView
                    android:layout_width="220px"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20px"
                    android:gravity="center_vertical"
                    android:text="服务方式"
                    android:textColor="#666666"
                    android:textSize="40px" />

                <TextView
                    android:layout_width="740px"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="80px"
                    android:gravity="center_vertical|end"
                    android:text="我去找他"
                    android:textColor="#666666"
                    android:textSize="40px" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#b5b5b5" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20px"
                    android:gravity="center_vertical"
                    android:text="我的口味(可多选)"
                    android:textColor="#666666"
                    android:textSize="40px" />

                <TextView
                    android:layout_width="540px"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="80px"
                    android:gravity="center_vertical|end"
                    android:text="鲁菜、粤菜"
                    android:textColor="#666666"
                    android:textSize="40px" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#b5b5b5" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20px"
                    android:gravity="center_vertical"
                    android:text="餐厅消费预算"
                    android:textColor="#666666"
                    android:textSize="40px" />

                <TextView
                    android:layout_width="640px"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="80px"
                    android:gravity="center_vertical|end"
                    android:text="100~200元"
                    android:textColor="#666666"
                    android:textSize="40px" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#b5b5b5" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="220px"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20px"
                    android:gravity="center_vertical|top"
                    android:text="需求详情"
                    android:textColor="#666666"
                    android:textSize="40px" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="80px"
                    android:layout_weight="1"
                    android:ellipsize="start"
                    android:gravity="top|right"
                    android:hint="请输入需求详情"
                    android:textColorHint="#999999"
                    android:textColor="#999999"
                    android:textSize="40px" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#b5b5b5" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150px">

                <TextView
                    android:layout_width="220px"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20px"
                    android:gravity="center_vertical"
                    android:text="期待价格"
                    android:textColor="#666666"
                    android:textSize="40px" />

                <TextView
                    android:layout_width="740px"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="80px"
                    android:gravity="center_vertical|end"
                    android:text="300元/小时"
                    android:textColor="#666666"
                    android:textSize="40px" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#b5b5b5" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150px">

                <TextView
                    android:id="@+id/ct"
                    android:layout_width="220px"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20px"
                    android:gravity="center_vertical"
                    android:text="餐厅套餐"
                    android:textColor="#666666"
                    android:textSize="40px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="80px"
                    android:gravity="center_vertical|end"
                    android:text="元/小时"
                    android:textColor="#666666"
                    android:textSize="40px" />

                <TextView
                    android:layout_width="580px"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/ct"
                    android:gravity="center_vertical|end"
                    android:text="5"
                    android:textColor="#ff6600"
                    android:textSize="40px" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#b5b5b5" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150px">

                <TextView
                    android:layout_width="220px"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20px"
                    android:gravity="center_vertical"
                    android:text="诚意金"
                    android:textColor="#666666"
                    android:textSize="40px" />

                <TextView
                    android:layout_width="740px"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="80px"
                    android:gravity="center_vertical|end"
                    android:text="500元"
                    android:textColor="#666666"
                    android:textSize="40px" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#b5b5b5" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_marginLeft="20px"
                    android:background="@drawable/post_radio_button"
                    android:button="@null"
                    android:checked="true" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="40px"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="同时为我推荐更多服务者"
                    android:textColor="#666666"
                    android:textSize="40px" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#b5b5b5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150px">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="合计：￥"
                        android:textColor="#666666"
                        android:textSize="40px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="495"
                        android:textColor="#ff6600"
                        android:textSize="50px" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#ffdd00"
                        android:gravity="center"
                        android:text="发布需求"
                        android:textColor="#333333"
                        android:textSize="50px" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>