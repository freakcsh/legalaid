<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <include
        layout="@layout/title"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20px"
            android:gravity="center_vertical"
            android:text="实付金额"
            android:textColor="#666666"
            android:textSize="40px" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="40px"
            android:layout_weight="1"
            android:gravity="center_vertical|end"
            android:text="490"
            android:textColor="#ff6600"
            android:textSize="50px" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150px">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20px"
                android:gravity="center_vertical"
                android:text="付款方式"
                android:textColor="#666666"
                android:textSize="40px" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="40px"
            android:paddingTop="20px"
            android:paddingRight="40px"
            android:paddingBottom="20px">

            <ImageView
                android:id="@+id/cz_zfb"
                android:layout_width="150px"
                android:layout_height="150px"
                android:background="@mipmap/zhifubao" />

            <TextView
                android:id="@+id/cz_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cz_tv"
                android:layout_marginLeft="50px"
                android:layout_toEndOf="@id/cz_zfb"
                android:layout_toRightOf="@id/cz_zfb"
                android:text="支付宝"
                android:textColor="#333333"
                android:textSize="50px" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/cz_zfb"
                android:layout_alignLeft="@+id/cz_tv"
                android:layout_alignStart="@+id/cz_tv"
                android:layout_marginBottom="20px"
                android:text="大额支付、支持银行卡、信用卡"
                android:textColor="#999999"
                android:textSize="40px" />

            <CheckBox
                android:layout_width="50px"
                android:layout_height="50px"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="40px"
            android:paddingTop="20px"
            android:paddingRight="40px"
            android:paddingBottom="20px">

            <ImageView
                android:id="@+id/cz_wx"
                android:layout_width="150px"
                android:layout_height="150px"
                android:background="@mipmap/weixinzhifu" />

            <TextView
                android:id="@+id/cz_wx_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cz_wx_tv"
                android:layout_marginLeft="50px"
                android:layout_toEndOf="@id/cz_wx"
                android:layout_toRightOf="@id/cz_wx"
                android:text="微信支付"
                android:textColor="#333333"
                android:textSize="50px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/cz_wx"
                android:layout_alignLeft="@+id/cz_wx_tv"
                android:layout_alignStart="@+id/cz_wx_tv"
                android:layout_marginBottom="20px"
                android:text="支付安全、支持银行卡、信用卡"
                android:textColor="#999999"
                android:textSize="40px" />

            <CheckBox
                android:layout_width="50px"
                android:layout_height="50px"
                android:checked="true"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="9dp"
                android:layout_marginEnd="9dp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <TextView
            android:layout_width="950px"
            android:layout_height="120px"
            android:background="@drawable/text_view_huang"
            android:gravity="center"
            android:text="确认付款"
            android:textColor="#333333"
            android:textSize="50px" />
    </LinearLayout>
</LinearLayout>