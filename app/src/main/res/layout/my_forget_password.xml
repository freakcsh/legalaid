<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <include
        android:id="@+id/my_forget_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        layout="@layout/title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:orientation="horizontal">

        <TextView
            android:layout_width="250px"
            android:layout_height="match_parent"
            android:layout_marginLeft="30px"
            android:gravity="center_vertical"
            android:text="手机号码"
            android:textColor="#333333"
            android:textSize="40px" />

        <EditText
            android:id="@+id/phone_number"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:hint="请输入绑定手机号"
            android:textColorHint="#999999"
            android:textSize="40px"
            android:textColor="#999999"
            android:gravity="center|left"
            />
        <TextView
            android:id="@+id/send_verification_code"
            android:layout_width="300px"
            android:layout_height="120px"
            android:text="发送验证码"
            android:textSize="40px"
            android:textColor="#333333"
            android:gravity="center"
            android:background="@drawable/text_view_huang"
            android:layout_marginRight="20px"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:orientation="horizontal">
        <TextView
            android:layout_width="250px"
            android:layout_height="match_parent"
            android:text="验证码"
            android:textSize="40px"
            android:textColor="#333333"
            android:gravity="center_vertical"
            android:layout_marginLeft="30px"/>
        <EditText
            android:id="@+id/verification_code"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:hint="请输入验证码"
            android:textColorHint="#999999"
            android:textSize="40px"
            android:textColor="#999999"
            android:gravity="center|left"
            android:editable="true"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:orientation="horizontal">
        <TextView
            android:layout_width="250px"
            android:layout_height="match_parent"
            android:text="新密码"
            android:textSize="40px"
            android:textColor="#333333"
            android:gravity="center_vertical"
            android:layout_marginLeft="30px"/>
        <EditText
            android:id="@+id/alter_new_password"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:hint="请输入新密码"
            android:textColorHint="#999999"
            android:textSize="40px"
            android:textColor="#999999"
            android:gravity="center|left"
            android:editable="true"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:orientation="horizontal">
        <TextView
            android:layout_width="250px"
            android:layout_height="match_parent"
            android:text="确认密码"
            android:textSize="40px"
            android:textColor="#333333"
            android:gravity="center_vertical"
            android:layout_marginLeft="30px"/>

        <EditText
            android:id="@+id/verify_alter_new_password"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:hint="请再次确认密码"
            android:textColorHint="#999999"
            android:textColor="#999999"
            android:textSize="40px" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|bottom">

        <TextView
            android:id="@+id/forget_verify"
            android:layout_width="950px"
            android:layout_height="150px"
            android:layout_marginBottom="40px"
            android:background="@drawable/text_view_huang"
            android:gravity="center"
            android:text="确认"
            android:textColor="#333333"
            android:textSize="50px" />
    </LinearLayout>

</LinearLayout>