<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20px">

        <ImageView
            android:id="@+id/official_order_dish_img"
            android:layout_width="200px"
            android:layout_height="200px"
            android:layout_marginLeft="40px"
            android:layout_marginTop="40px"
            />

        <TextView
            android:id="@+id/official_order_dish_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/official_order_dish_img"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/official_order_dish_img"
            android:layout_toRightOf="@+id/official_order_dish_img"
            android:text="蛋炒饭"
            android:textColor="#333333"
            android:textSize="50px" />

        <TextView
            android:id="@+id/official_order_dish_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/official_order_dish_name"
            android:layout_alignStart="@+id/official_order_dish_name"
            android:layout_below="@+id/official_order_dish_name"
            android:layout_marginTop="20px"
            android:ellipsize="end"
            android:gravity="center|left"
            android:maxEms="100"
            android:singleLine="true"
            android:text="扬州炒饭又名扬州蛋炒饭，是江苏扬州的经典小吃。主食有米饭、火腿、鸡蛋。"
            android:textColor="#999999"
            android:textSize="40px" />

        <TextView
            android:id="@+id/official_order_dish_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥35"
            android:textColor="#ff6600"
            android:textSize="50px"
            android:layout_marginTop="15px"
            android:layout_below="@+id/official_order_dish_more"
            android:layout_alignLeft="@+id/official_order_dish_more"
            android:layout_alignStart="@+id/official_order_dish_more" />

        <TextView
            android:id="@+id/official_order_dish_price_yuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15px"
            android:text="￥45"
            android:textColor="#999999"
            android:textSize="50px"
            android:layout_below="@+id/official_order_dish_more"
            android:layout_toRightOf="@+id/official_order_dish_name"
            android:layout_toEndOf="@+id/official_order_dish_name" />

        <ImageView
            android:id="@+id/official_order_dish_minus"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="15px"
            android:visibility="gone"
            android:background="@mipmap/jian_waimai"
            android:layout_below="@+id/official_order_dish_more"
            android:layout_toLeftOf="@+id/official_order_dish_num"
            android:layout_toStartOf="@+id/official_order_dish_num" />

        <EditText
            android:id="@+id/official_order_dish_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="27dp"
            android:layout_marginRight="27dp"
            android:text="1"
            android:layout_marginTop="15px"
            android:textColor="#333333"
            android:textSize="50px"
            android:textStyle="bold"
            android:background="@null"
            android:layout_below="@+id/official_order_dish_more"
            android:layout_toLeftOf="@+id/official_order_dish_jia"
            android:layout_toStartOf="@+id/official_order_dish_jia" />

        <ImageView
            android:id="@+id/official_order_dish_jia"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/official_order_dish_num"
            android:layout_marginEnd="7dp"
            android:layout_marginRight="7dp"
            android:background="@mipmap/jia_waimiai" />
    </RelativeLayout>

</LinearLayout>